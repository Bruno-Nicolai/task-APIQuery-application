<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name_user"
            style="@style/Theme.APIQueryApplication.ItemUserTextViewBold"
            tools:text="Name" />

        <TextView
            android:id="@+id/tv_username_user"
            style="@style/Theme.APIQueryApplication.ItemUserTextView"
            tools:text="Username" />

        <TextView
            android:id="@+id/tv_email_user"
            style="@style/Theme.APIQueryApplication.ItemUserTextView"
            tools:text="Email" />

        <TextView
            android:id="@+id/tv_phone_user"
            style="@style/Theme.APIQueryApplication.ItemUserTextView"
            tools:text="Phone" />

        <TextView
            android:id="@+id/tv_website_user"
            style="@style/Theme.APIQueryApplication.ItemUserTextView"
            tools:text="Website" />

    </LinearLayout>

    <View
        android:background="@color/red_900"
        android:width="0dp"
        android:height="0.5dp"/>

</LinearLayout>
