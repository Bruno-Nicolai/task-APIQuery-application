<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="5dp" >

    <TextView
        android:id="@+id/tv_title_album"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Theme.APIQueryApplication.ItemViewTextView"
        tools:text="Title"/>

    <View
        app:layout_constraintTop_toBottomOf="@+id/tv_title_album"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Theme.APIQueryApplication.LineHorizontal"
        android:background="@color/yellow_900" />

</androidx.constraintlayout.widget.ConstraintLayout>
